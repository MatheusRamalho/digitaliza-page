{
    "extends": [
        "@rocketseat/eslint-config/next",
        "next/core-web-vitals"
    ],
    "rules": {
        "@typescript-eslint/no-explicit-any": [
            "off"
        ],
        "prettier/prettier": [
            "error",
            {
                "printWidth": 120,
                "tabWidth": 4,
                "singleQuote": true,
                "trailingComma": "all",
                "arrowParens": "always",
                "semi": false,
                "endOfLine": "auto"
            }
        ]
    }
}
